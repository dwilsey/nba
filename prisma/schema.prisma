generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  bets     Bet[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Bet {
  id        String     @id @default(cuid())
  userId    String
  oddsType  OddsType
  team      String
  opponent  String
  odds      Float
  amount    Float
  result    BetResult  @default(PENDING)
  profit    Float?
  gameDate  DateTime
  gameId    String?
  notes     String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game? @relation(fields: [gameId], references: [id])

  @@index([userId])
  @@index([gameDate])
  @@map("bets")
}

model Prediction {
  id                  String    @id @default(cuid())
  gameId              String    @unique
  homeTeam            String
  awayTeam            String
  predictedWinner     String
  confidence          Float
  homeWinProbability  Float
  awayWinProbability  Float
  spreadPrediction    Float?
  totalPrediction     Float?
  predictedHomeScore  Float?    // Model predicted score
  predictedAwayScore  Float?    // Model predicted score
  actualWinner        String?
  isCorrect           Boolean?
  gameDate            DateTime
  factors             Json?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  // Results tracking fields
  actualHomeScore     Int?
  actualAwayScore     Int?
  closingSpread       Float?    // Vegas spread at tip-off
  closingTotal        Float?    // Vegas total at tip-off
  spreadResult        String?   // "WIN", "LOSS", "PUSH"
  totalResult         String?   // "OVER", "UNDER", "PUSH"

  game Game @relation(fields: [gameId], references: [id])

  @@index([gameDate])
  @@map("predictions")
}

model Game {
  id           String     @id @default(cuid())
  externalId   String     @unique
  homeTeam     String
  homeTeamId   Int
  awayTeam     String
  awayTeamId   Int
  homeScore    Int?
  awayScore    Int?
  status       GameStatus @default(SCHEDULED)
  gameDate     DateTime
  season       Int
  odds         Json?
  venue        String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  prediction        Prediction?
  xgboostPrediction XGBoostPrediction?
  bets              Bet[]
  oddsHistory       OddsHistory[]

  @@index([gameDate])
  @@index([status])
  @@map("games")
}

model Team {
  id           String   @id @default(cuid())
  externalId   Int      @unique
  name         String
  fullName     String
  abbreviation String
  city         String
  conference   String
  division     String
  logoUrl      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  stats TeamStats?

  @@map("teams")
}

model TeamStats {
  id              String   @id @default(cuid())
  teamId          String   @unique
  season          Int
  wins            Int      @default(0)
  losses          Int      @default(0)
  homeWins        Int      @default(0)
  homeLosses      Int      @default(0)
  awayWins        Int      @default(0)
  awayLosses      Int      @default(0)
  pointsPerGame   Float    @default(0)
  pointsAgainst   Float    @default(0)
  streak          Int      @default(0)
  last10Wins      Int      @default(0)
  last10Losses    Int      @default(0)
  atsWins         Int      @default(0)
  atsLosses       Int      @default(0)
  atsPushes       Int      @default(0)
  overUnderRecord Json?
  updatedAt       DateTime @updatedAt

  team Team @relation(fields: [teamId], references: [id])

  @@map("team_stats")
}

enum OddsType {
  MONEYLINE
  SPREAD
  TOTAL
  PARLAY
}

enum BetResult {
  PENDING
  WIN
  LOSS
  PUSH
  VOID
}

enum GameStatus {
  SCHEDULED
  IN_PROGRESS
  FINAL
  POSTPONED
  CANCELLED
}

model InjuryFlag {
  id         String    @id @default(cuid())
  playerId   Int
  playerName String
  teamId     String
  status     String    // out, questionable, probable
  impact     String    // high, medium, low
  notes      String?
  flaggedAt  DateTime  @default(now())
  clearedAt  DateTime?
  flaggedBy  String    // manual

  @@index([teamId])
  @@index([playerId])
  @@map("injury_flags")
}

model EloHistory {
  id       String   @id @default(cuid())
  teamId   String
  elo      Float
  gameId   String
  change   Float
  date     DateTime
  isPlayoff Boolean @default(false)

  @@index([teamId])
  @@index([date])
  @@map("elo_history")
}

model BacktestResult {
  id                 String   @id @default(cuid())
  season             Int
  modelVersion       String
  totalGames         Int
  correctPredictions Int
  accuracy           Float
  roiIfBetting       Float
  byMonth            Json?
  vsClosingLine      Json?
  createdAt          DateTime @default(now())

  @@unique([season, modelVersion])
  @@map("backtest_results")
}

model OddsHistory {
  id            String   @id @default(cuid())
  gameId        String
  capturedAt    DateTime @default(now())
  isClosing     Boolean  @default(false) // True = captured at game start (tip-off)
  homeMoneyline Int
  awayMoneyline Int
  spread        Float    // Negative = home favored
  spreadOdds    Int
  total         Float
  overOdds      Int
  underOdds     Int
  bookmaker     String

  game Game @relation(fields: [gameId], references: [id])

  @@index([gameId])
  @@index([capturedAt])
  @@index([isClosing])
  @@map("odds_history")
}

model InjuryReport {
  id          String   @id @default(cuid())
  playerId    Int
  playerName  String
  teamId      Int
  teamName    String
  status      String   // Only track: OUT, DOUBTFUL (ignore Questionable/Probable)
  injury      String   // "Knee", "Ankle", etc.
  returnDate  String?  // "Day-to-Day", "2-3 weeks", etc.
  source      String   // "CBS", "ESPN", "RotoWire", "BBRef"
  impactLevel String   // "HIGH" (starter), "MEDIUM" (rotation), "LOW" (bench)
  fetchedAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([playerId, fetchedAt])
  @@index([teamId])
  @@index([status])
  @@map("injury_reports")
}

// XGBoost Model Advanced Stats

model TeamAdvancedStats {
  id            String   @id @default(cuid())
  teamId        String
  season        Int
  date          DateTime

  // Raw ratings
  offRating     Float
  defRating     Float
  netRating     Float
  pace          Float

  // Adjusted ratings (SOS)
  adjOffRating  Float?
  adjDefRating  Float?
  adjNetRating  Float?

  // Four Factors - Offense
  efgPct        Float    // Effective FG%
  tovPct        Float    // Turnover %
  orebPct       Float    // Offensive rebound %
  ftr           Float    // Free throw rate

  // Four Factors - Defense (opponent stats)
  oppEfgPct     Float
  oppTovPct     Float
  oppOrebPct    Float
  oppFtr        Float

  // Strength of Schedule
  sosOrtg       Float?   // Opponents' average ORTG
  sosDrtg       Float?   // Opponents' average DRTG

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([teamId, date])
  @@index([teamId])
  @@index([season])
  @@map("team_advanced_stats")
}

model PlayerBPM {
  id            String   @id @default(cuid())
  playerId      Int
  playerName    String
  teamId        String
  season        Int
  bpm           Float    // Box Plus/Minus
  obpm          Float    // Offensive BPM
  dbpm          Float    // Defensive BPM
  vorp          Float    // Value Over Replacement Player
  minutesPlayed Int
  gamesPlayed   Int      @default(0)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([playerId, season])
  @@index([teamId])
  @@index([season])
  @@map("player_bpm")
}

model XGBoostPrediction {
  id                  String   @id @default(cuid())
  gameId              String   @unique
  homeWinProbability  Float
  awayWinProbability  Float
  predictedWinner     String
  predictedSpread     Float
  predictedTotal      Float?
  predictedHomeScore  Float?   // Model predicted score
  predictedAwayScore  Float?   // Model predicted score
  confidence          Float
  featureVector       Json     // Store all 20 features
  modelVersion        String
  generatedAt         DateTime @default(now())

  game                Game     @relation(fields: [gameId], references: [id])

  @@index([generatedAt])
  @@map("xgboost_predictions")
}
